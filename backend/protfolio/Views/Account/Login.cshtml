
@{
    ViewData["Title"] = "AccountView";
}
@model protfolio.Models.LoginModel


@if (ViewBag.IsWorng != null)
{

}
else
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        <form method="POST">
                        <div class="card-body">
                            <h1>Вход</h1>
                            <p class="text-muted">Войдите в аккаунт</p>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                <input class="form-control" type="text" placeholder="Имя пользователя">
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input class="form-control" type="password" placeholder="Пароль">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button class="btn btn-primary px-4" type="submit">Войти</button>
                                </div>
                                <div class="col-6 text-right">
                                    <!--button class="btn btn-link px-0" type="button">Forgot password?</button-->
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-body text-center">
                            <div>
                                <h2>Регистрация</h2>
                                <p>Портфолио ваших проектов</p>
                                <a class="btn btn-primary active mt-3" type="button" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

