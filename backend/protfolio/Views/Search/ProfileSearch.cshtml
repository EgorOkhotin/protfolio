
@{
    ViewData["Title"] = "Пользователи";
}
@model ProfileSearchModel

<div class="col-md-6">
  <div class="card">
    <div class="card-body">
      <table class="table table-responsive-sm table-hover table-outline mb-0">
        <thead class="thead-light">
          <tr>
            <th class="text-center">
              <i class="icon-people"></i>
            </th>
            <th>Пользователь
            </th>
          </tr>
        </thead>
        <tbody>
          @foreach (var user in Model.ProfSkills)
          {
            <tr>
              <td class="text-center">
                <div class="avatar">
                  <img class="img-avatar" src="img/avatars/1.jpg">
                  <!--span class="avatar-status badge-success"></span-->
                </div>
              </td>
              <td>
                <div style="font-weight: bold;"><a href="#">Yiorgos Avraamu</a></div>
                <div class="small text-muted">
                  <div>Data Scientist</div>
                  <div>python • pandas</div>
                </div>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="col-md-3">
  <div class="card">
    <div class="card-header">Фильтры</div>
    <fieldset class="card-body">
      <form class="form-horizontal" action="" method="post" enctype="multipart/form-data">
        <fieldset class="form-group">
          <label>Специализация</label>
          <div class="col-md-12">
            <select class="form-control" id="select1" name="Специализация">
              <option value="0">Please select
              </option>
              <option value="1">IT > Backend
              </option>
              <option value="2">IT > Frontend
              </option>
              <option value="3">IT > Менеджмент
              </option>
            </select>
          </div>
        </fieldset>
        <fieldset class="form-group">
          <label>Профессиональные навыки</label>
          <div class="col-md-12 ">
            <input class="form-control" type="text" name="skills" />
          </div>
        </fieldset>
        <div class="form-group row">
          <div class="col-md-12">
            <button type="button" class="btn btn-primary"> Найти
            </button>
          </div>
        </div>
      </form>
    </fieldset>
  </div>
</div>

